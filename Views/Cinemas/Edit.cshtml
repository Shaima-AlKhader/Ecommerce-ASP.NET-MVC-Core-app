@model EcommerceTeckits.Models.Cinema

@{
    ViewData["Title"] = "Update Cinema";
}
<html>
    <head></head>
    <body>
  
      <div class="row text">
         <div class="col-md-8 offset-2">
            <h1>Update Ciema</h1>
            <form asp-action="Edit" asp-route-ID="@Model.CinemaId">
                  <div class="mb-3 text-center">
                    <img class="border-info rounded-circle" style="max-width:150px" id="ProfilePicturePreview" />
                  </div>
                  <div class="mb-3">
                    Cinema Logo
                    <span class="text-danger">*</span>
                    <input type="text" asp-for="Logo" class="form-control" />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                  </div>
                  <div class="mb-3">
                     Name
                    <span class="text-danger">*</span>
                    <input type="text" asp-for="CinemaName" class="form-control" />
                    <span asp-validation-for="CinemaName" class="text-danger"></span>
                  </div>
                  <div class="mb-3">
                    Description
                    <span class="text-danger">*</span>
                    <input type="text" asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                  </div>

                  <div class="mb-3">
                    <input type="submit" value="Update" class="btn btn-outline-success" style="float:right" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                  </div>
            </form>
         </div>
      </div>
     
    </body>
</html>

@section Scripts{
     <script>
         $(document).ready(function(){
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureUrl").val();
         })

        $("#ProfilePictureUrl").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src=$(this).val();
           })
     </script>
    
}
